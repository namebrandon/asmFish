macro RookAttacksV X, Sq, Occ, T, S, PEXT, IMUL, MOFF
            ldr  T, [PEXT, Sq, lsl 3]
            ldr  S, [IMUL, Sq, lsl 3]
            ldr  X, [MOFF, Sq, lsl 3]
            and  T, T, Occ
            mul  T, T, S
            lsr  T, T, 64-12
            ldr  X, [X, T, lsl 3]
end macro

