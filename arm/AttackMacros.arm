            ldr  X, [S, BishopAttacksMOFF - BishopAttacksPEXT]
            ldr  S, [S, BishopAttacksIMUL - BishopAttacksPEXT]
            mul  T, T, S
            lsr  T, T, 64-9
            ldr  X, [X, T, lsl 3]
